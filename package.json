{
  "name": "openmrs-esm-home",
  "version": "1.0.0",
  "description": "Homepage microfrontend for the OpenMRS SPA",
  "main": "dist/openmrs-esm-home.js",
  "scripts": {
    "start": "webpack-dev-server",
    "start-https": "webpack-dev-server --https",
    "build": "webpack --mode production",
    "lint": "eslint src --ext tsx",
    "prettier": "prettier",
    "typescript": "tsc",
    "prepublishOnly": "npm run build",
    "test": "jest --config jest.config.json"
  },
  "browserslist": [
    "extends browserslist-config-openmrs"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint && npm test && npm run typescript"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openmrs/openmrs-esm-home.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/openmrs/openmrs-esm-home/issues"
  },
  "homepage": "https://github.com/openmrs/openmrs-esm-home#readme",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@testing-library/react": "^9.1.3",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^4.3.5",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "browserslist-config-openmrs": "^1.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.2.0",
    "eslint": "^6.2.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-config-ts-react-important-stuff": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "fork-ts-checker-webpack-plugin": "^1.5.0",
    "husky": "^3.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "style-loader": "^1.0.0",
    "typescript": "^3.5.3",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0"
  },
  "dependencies": {
    "kremling": "^2.0.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "single-spa-react": "^2.10.2"
  }
}
